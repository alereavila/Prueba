<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_centerInParent="true"
              android:padding="@dimen/activity_margin_default_value"
              android:orientation="vertical"
              tools:context=".MainActivity">
    <Button
            android:id="@+id/btn_get_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_default_value"
            android:background="@drawable/button_bg"
            android:text="@string/btn_get_request_text"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/fontsize_default_value"
            android:textStyle="bold" />
    <Button
            android:id="@+id/btn_post_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_default_value"
            android:background="@drawable/button_bg"
            android:text="@string/btn_post_request_text"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/fontsize_default_value"
            android:textStyle="bold" />
</LinearLayout>