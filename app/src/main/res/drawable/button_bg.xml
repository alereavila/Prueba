<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="false">
        <shape>
            <stroke android:width="0dp" android:color="@color/colorPrimaryText" />
            <gradient android:angle="270" android:endColor="@color/colorButtonBg" android:startColor="@color/colorButtonBg" />
            <corners
                    android:bottomLeftRadius="30dp"
                    android:bottomRightRadius="30dp"
                    android:topLeftRadius="30dp"
                    android:topRightRadius="30dp"
            />
            <padding android:bottom="0dp" android:left="20dp" android:right="20dp" android:top="0dp" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <stroke android:width="3dp" android:color="@color/colorPrimaryText" />
            <gradient android:angle="270" android:endColor="@color/colorButtonBgDark" android:startColor="@color/colorButtonBgDark" />
            <corners
                    android:bottomLeftRadius="30dp"
                    android:bottomRightRadius="30dp"
                    android:topLeftRadius="30dp"
                    android:topRightRadius="30dp"
            />
            <padding android:bottom="0dp" android:left="20dp" android:right="20dp" android:top="0dp" />
        </shape>
    </item>
</selector>